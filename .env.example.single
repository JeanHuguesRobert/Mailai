# Email Configuration
MAILAI_EMAIL_USER=your@email.com
MAILAI_EMAIL_PASSWORD=your-app-password
MAILAI_EMAIL_HOST=imap.gmail.com
MAILAI_EMAIL_PORT=993

# OpenAI Configuration
MAILAI_OPENAI_API_KEY=your-openai-key

# AI Configuration
MAILAI_AI_PROVIDER=openai  # or mistral
MAILAI_AI_API_KEY=your-api-key
MAILAI_AI_MODEL=gpt-3.5-turbo  # or mistral-tiny, mistral-small, mistral-medium

# Prompts
MAILAI_PRE_PROMPT_URL=file://prompts/custom_prompt.txt

# Monitoring
MAILAI_BCC_EMAILS=your-monitoring@email.com

# MCP Configuration (optional)
MAILAI_MCP_ENABLED=false
MAILAI_MCP_SERVER_URL=./mcp-server.js
MAILAI_MCP_COMMAND=node
MAILAI_MCP_CREDENTIALS={"key": "your-credentials-here"}

# HTTP Monitor Configuration
MAILAI_HTTP_PORT=3000

# Alternative AI Providers
MAILAI_CLAUDE_API_KEY=your-claude-key
MAILAI_PALM_API_KEY=your-palm-key
MAILAI_LLAMA_API_KEY=your-replicate-key
MAILAI_COHERE_API_KEY=your-cohere-key

# Additional AI Providers
MAILAI_GEMINI_API_KEY=your-gemini-key
MAILAI_AZURE_API_KEY=your-azure-key
MAILAI_AZURE_ENDPOINT=your-azure-endpoint
MAILAI_AZURE_DEPLOYMENT=your-deployment-name
MAILAI_HUGGINGFACE_API_KEY=your-hf-key
MAILAI_HUGGINGFACE_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1

# Plugin Configuration
MAILAI_PLUGIN_CLAUDE_PROVIDER={"temperature": 0.7}
MAILAI_PLUGIN_PALM_PROVIDER={"temperature": 0.7}
MAILAI_PLUGIN_LLAMA_PROVIDER={"temperature": 0.7}
MAILAI_PLUGIN_COHERE_PROVIDER={"temperature": 0.7}
MAILAI_PLUGIN_GEMINI_PROVIDER={"temperature": 0.7}
MAILAI_PLUGIN_AZURE_OPENAI_PROVIDER={"temperature": 0.7}
MAILAI_PLUGIN_HUGGINGFACE_PROVIDER={"temperature": 0.7}
